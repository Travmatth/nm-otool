{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "philo launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/philo",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "env": {
				"SHELL": "/bin/zsh"
            },
            "setupCommands": [
                { "text": "settings set target.input-path test/input.txt" }
            ],
            "preLaunchTask": "build",
            "externalConsole": false,
            "linux": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            }
        },
        {
